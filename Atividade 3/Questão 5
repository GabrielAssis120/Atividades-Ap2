#include <stdio.h>
#include <stdlib.h>

int contarCaracteres(char *str) {
    int contador = 0;

    while (*str != '\0') {
        contador++;
        str++;  
    }

    return contador;
}

int main() {
    char str[100];

    printf("Digite uma string: ");
    fgets(str, sizeof(str), stdin);

    str[strcspn(str, "\n")] = '\0';
    int totalCaracteres = contarCaracteres(str);

    printf("O numero de caracteres na string e: %d\n", totalCaracteres);

    return 0;
}
